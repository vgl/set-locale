@model AppModel

@{
    ViewBag.Title = Html.LocalizationString("new_app_title");
}

<div class="row col-lg-5">
    <h3>@ViewBag.Title</h3>
    <hr />

    <form id="frm" name="frm" action="/app/new" method="post">
        <div class="row">
            <strong>@Html.LocalizationString("app_name")</strong>
            <input type="text" class="form-control input-lg" name="name" id="name" value="@Model.Name" />
        </div>

        <div class="row">
            <strong>@Html.LocalizationString("url")</strong>
            <input type="text" class="form-control input-lg" name="url" id="url" value="@Model.Url" />
        </div>

        <div class="row">
            <strong>@Html.LocalizationString("description")</strong>
            <input type="text" class="form-control input-lg" name="description" id="description" value="@Model.Description" />
        </div>

        @Html.AntiForgeryToken()

        <div class="row">
            <input type="submit" value="@Html.LocalizationString("btn_save")" class="btn btn-primary btn-lg" />
        </div>

        <div class="error">
            @Model.Msg
        </div>
    </form>
</div>


@section script
{
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("form#frm").validate({
                rules: {
                    name: {
                        required: true
                    },
                    url: {
                        required: true
                    },
                    description: {
                        required: true
                      }
                },
                messages: {
                    name: "*",
                    url: "*",
                    description: "*"
                }
            });
        });
    </script>
}